<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_layout"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MissionCalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFEFE"
        android:backgroundTint="#EAF3F8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-45dp">

        <!-- Month Header -->
        <TextView
            android:id="@+id/monthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:accessibilityLiveRegion="polite"
            android:clickable="true"
            android:contentDescription="@string/monthTitle_contentDescription"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:minHeight="48dp"
            android:text="July 2024"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Year and Month Navigation -->
        <LinearLayout
            android:id="@+id/month_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/monthTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/prev_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/prev_month_contentDescription"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:clickable="true" />

            <TextView
                android:id="@+id/current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:accessibilityLiveRegion="polite"
                android:clickable="true"
                android:contentDescription="@string/current_month_contentDescription"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:minHeight="48dp"
                android:text="2024.01"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/next_month_contentDescription"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

        <!-- Weekdays Header -->
        <LinearLayout
            android:id="@+id/month_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/month_navigation">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/sunday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="일"
                android:textColor="#FF0000"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/monday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="월"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/tuesday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="화"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/wednesday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="수"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/thursday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="목"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/friday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="금"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/saturday"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:text="토"
                android:textColor="#0000FF"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Calendar RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cal_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/month_layout"
            app:layout_constraintBottom_toTopOf="@id/add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <!-- Add Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/add_button_contentDescription"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:text="추가"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>